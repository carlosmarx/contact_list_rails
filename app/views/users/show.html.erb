<section class="jumbotron text-center">
  <div class="container">

    <% flash.each do |message_type, message| %>
      <%= content_tag 'div', class: "alert alert-#{message_type} alert-dismissible", role: alert do %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= message %>
      <% end %>
    <% end %>

    <p>
      <%= link_to  "Editar Conta", edit_user_path, class: 'btn btn-primary my-2' %>
    </p>

    <h1>Olá <%= current_user.name %></h1>
    <p class="lead text-muted">Crie e gerencie sua lista d contatos em um só lugar.</p>
    <p>
      <%= link_to  "Lista de contatos", contacts_path, class: 'btn btn-success my-2' %>
      <%= link_to  "Cadastrar novo", new_contact_path, class: 'btn btn-secondary my-2' %>
    </p>
  </div>
</section>